{% extends 'base.html.twig' %}

{% block contenu %}
<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<h1><center>Liste des stages proposés par {{entreprise.getNom()}}</center></h1> <HR>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			<table class="table table-hover table-bordered border-dark border border-2">
				<thead>
					<tr>
						<th>
							Identifiant
						</th>
						<th>
							Titre
						</th>
						<th>
							Nom de l'entreprise
						</th>
						<th>
							Activité de l'entreprise
						</th>
						<th>
							Adresse de l'entreprise
						</th>
						<th>
							URL du site de l'entreprise
						</th>
					</tr>
				</thead>
				<tbody>
					{% for stage in entreprise.getStages() %}
					<tr>
							<td>
								{{stage.getId()}}
							</td>
							<td>
								<a href="{{ path('prostages_stage', {id:stage.getId()}) }}">
									{{stage.getTitre()}}
								</a>
							</td>
							<td>
								{{stage.getEntreprise().getNom()}}
							</td>
							<td>
								{{stage.getEntreprise().getActivite()}}
							</td>
							<td>
								{{stage.getEntreprise().getAdresse()}}
							</td>
							<td>
								{{stage.getEntreprise().getURLsite()}}
							</td>
					</tr>
					{% else %}
						<p>Aucun stage disponible.</p>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>
{% endblock %}

